# BenchmarkOS Chatbot Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# OpenAI Configuration
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# =============================================================================
# Database Configuration
# =============================================================================
# SQLite (default for development)
DATABASE_URL=sqlite:///data/sqlite/benchmarkos_chatbot.sqlite3

# PostgreSQL (for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/benchmarkos_chatbot

# Database connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# =============================================================================
# SEC API Configuration
# =============================================================================
SEC_API_KEY=your_sec_api_key_here
SEC_USER_AGENT=BenchmarkOS Chatbot (your-email@company.com)
SEC_BASE_URL=https://data.sec.gov/api/xbrl/companyfacts
SEC_TIMEOUT=30

# =============================================================================
# Web Server Configuration
# =============================================================================
HOST=0.0.0.0
PORT=8000
DEBUG=True
RELOAD=True

# CORS settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
CORS_METHODS=["GET", "POST", "PUT", "DELETE"]
CORS_HEADERS=["*"]

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/chatbot.log
LOG_FORMAT=json
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# =============================================================================
# Security Configuration
# =============================================================================
SECRET_KEY=your_secret_key_here_change_this_in_production
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# =============================================================================
# Cache Configuration
# =============================================================================
CACHE_TYPE=memory
CACHE_DEFAULT_TIMEOUT=300
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# File Upload Configuration
# =============================================================================
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=xlsx,csv,json
UPLOAD_DIR=uploads

# =============================================================================
# Email Configuration (optional)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=True

# =============================================================================
# Monitoring & Analytics
# =============================================================================
ENABLE_METRICS=True
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# Development Settings
# =============================================================================
# Set to True for development, False for production
DEVELOPMENT_MODE=True
ENABLE_DEBUG_TOOLBAR=True
ENABLE_SWAGGER_UI=True

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_CFI_DASHBOARD=True
ENABLE_COMPARISON_TOOL=True
ENABLE_EXPORT_FEATURES=True
ENABLE_REAL_TIME_UPDATES=True

# =============================================================================
# External API Keys (optional)
# =============================================================================
# Alpha Vantage API
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key

# Yahoo Finance API
YAHOO_FINANCE_API_KEY=your_yahoo_finance_key

# FRED API (Federal Reserve Economic Data)
FRED_API_KEY=your_fred_api_key

# =============================================================================
# Performance Settings
# =============================================================================
# Worker processes
WORKERS=4

# Memory settings
MAX_MEMORY_USAGE=2GB
GARBAGE_COLLECTION_THRESHOLD=100MB

# Request timeout
REQUEST_TIMEOUT=30

# =============================================================================
# Backup Configuration
# =============================================================================
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_DIR=backups

# =============================================================================
# Notification Settings
# =============================================================================
ENABLE_NOTIFICATIONS=True
NOTIFICATION_EMAIL=admin@company.com
SLACK_WEBHOOK_URL=your_slack_webhook_url

# =============================================================================
# Data Sources Configuration
# =============================================================================
# SEC data refresh interval (hours)
SEC_DATA_REFRESH_INTERVAL=24

# Cache TTL for financial data (minutes)
FINANCIAL_DATA_CACHE_TTL=60

# Maximum number of companies to analyze simultaneously
MAX_CONCURRENT_ANALYSES=5

# =============================================================================
# API Rate Limits
# =============================================================================
# OpenAI API rate limits
OPENAI_RATE_LIMIT_REQUESTS_PER_MINUTE=60
OPENAI_RATE_LIMIT_TOKENS_PER_MINUTE=150000

# SEC API rate limits
SEC_RATE_LIMIT_REQUESTS_PER_SECOND=10
SEC_RATE_LIMIT_REQUESTS_PER_DAY=10000